<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SimpleInput"
        android:paddingBottom="100dp">

        <Button
            android:id="@+id/createSimpleFileButton"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="76dp"
            android:text="Save file"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createFolderButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Folder" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fileName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="270dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fileNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filename"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:overScrollMode="always"
                android:ellipsize="none"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/simpleInput"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SimpleInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Word , Translation"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="281dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/errorMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginTop="170dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>