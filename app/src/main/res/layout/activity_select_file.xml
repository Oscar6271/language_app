<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFile">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a file to practice from"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-400dp"/>

    <Button
        android:id="@+id/WordsFileButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="-300dp"
        android:text="words"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dropdown-menyn (gömd tills man trycker på knappen) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dropdownMenu"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/WordsFileButton"
        app:layout_constraintStart_toStartOf="@id/WordsFileButton"
        app:layout_constraintEnd_toEndOf="@id/WordsFileButton">

        <Button
            android:id="@+id/WriteTranslationButton"
            android:text="Write translation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/WriteOriginalButton"
            android:text="Write original"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/WriteTranslationButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/EditSetButton"
            android:text="Edit wordset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/WriteOriginalButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
        <Button
            android:id="@+id/DeleteSetButton"
            android:text="Delete wordset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditSetButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>