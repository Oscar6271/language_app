<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrdApp">
        <activity
            android:name=".ChooseFileMode"
            android:exported="false"
            android:label="Choose action"/>
        <activity
            android:name=".SelectFile"
            android:exported="false"
            android:label="Choose File" />
        <activity
            android:name=".SimpleInput"
            android:exported="false"
            android:label="Edit files"/>
        <activity
            android:name=".Practice"
            android:exported="false"
            android:label="Practice wordset"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>